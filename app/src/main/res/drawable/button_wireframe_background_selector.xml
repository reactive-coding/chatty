<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_enabled="false"><shape>
            <solid android:color="@android:color/transparent" />

            <stroke android:width="1dp" android:color="#d5d5d5" />

            <corners android:radius="@dimen/radius" />

            <padding android:bottom="8dp" android:left="10dp" android:right="10dp" android:top="8dp" />
        </shape></item>
    <item android:state_pressed="true"><shape>
            <solid android:color="#cccccc" />

            <stroke android:width="1dp" android:color="#b0131e" />

            <corners android:radius="@dimen/radius" />

            <padding android:bottom="8dp" android:left="10dp" android:right="10dp" android:top="8dp" />
        </shape></item>
    <item><shape>
            <solid android:color="@android:color/transparent" />

            <stroke android:width="1dp" android:color="#e21928" />

            <corners android:radius="@dimen/radius" />

            <padding android:bottom="8dp" android:left="10dp" android:right="10dp" android:top="8dp" />
        </shape></item>

</selector>