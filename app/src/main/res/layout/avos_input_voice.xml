<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="200dp"
    android:layout_height="200dp"
    android:background="@color/halfBlackTransparentWindowBackGround"
    android:gravity="center"
    android:layout_gravity="center"
    android:orientation="vertical" >
    
    <RelativeLayout 
        android:id="@+id/id_get_volumn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        >
        <LinearLayout
            android:id="@+id/id_voice_ll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal">
            <ImageView
                android:id="@+id/id_voice_hint"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/voice_rcd_hint"
            />

            <ImageView
                android:id="@+id/id_voice_amplitude"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/amp2" />
        </LinearLayout>

        <TextView
            android:layout_below="@id/id_voice_ll"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:gravity="center_horizontal"
            android:text="Slid up to cancel"
            android:textColor="@android:color/white" />

    </RelativeLayout>

</LinearLayout>
