<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/activity_toolbar_2_fl"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp_80"
    android:layout_centerVertical="true"
    android:background="@color/colorPrimary">

    <LinearLayout
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingRight="@dimen/dp_16"
        android:paddingLeft="@dimen/dp_16"
        android:gravity="center|bottom"
        android:layout_marginBottom="@dimen/dp_16"
        android:orientation="horizontal">
        <TextView
            android:layout_weight="1"
            android:id="@+id/toolbar_navigation_up"
            style="@style/TextAppearance.ToolBar.Navigation"
            android:layout_width="@dimen/dp_0"
            android:gravity="center_vertical|left"
            android:text="切换"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_weight="1"
            android:id="@+id/toolbar_title_center"
            style="@style/TextAppearance.ToolBar.Title"
            android:gravity="center_vertical"
            android:layout_width="@dimen/dp_0"
            android:layout_height="wrap_content"
            android:text="@string/app_name"/>
        <TextView
            android:layout_weight="1"
            style="@style/TextAppearance.ToolBar.Menu"
            android:gravity="center_vertical|right"
            android:id="@+id/toolbar_title_right"
            android:layout_width="@dimen/dp_0"
            android:layout_height="wrap_content"
            android:text="地图"
            android:visibility="visible"/>
    </LinearLayout>
</FrameLayout>