<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="200dp"
    android:layout_height="200dp"
    android:background="@color/halfBlackTransparentWindowBackGround"
    android:gravity="center"
    android:layout_gravity="center"
    android:orientation="vertical" >
    
    <RelativeLayout 
        android:id="@+id/id_cancel_volumn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        >


        <ImageView
            android:id="@+id/id_voice_cancel_hint"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/rcd_cancel_icon"
            android:layout_alignParentTop="true" android:layout_centerHorizontal="true"/>
        <TextView
            android:padding="4dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/id_voice_cancel_hint"
            android:gravity="center_horizontal"
            android:text="Release to cancel"
            android:textColor="@android:color/white"
            android:background="@color/darkred" />
    </RelativeLayout>

</LinearLayout>
