<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="fill_parent"
              android:layout_height="wrap_content"
              android:layout_marginTop="@dimen/dp_1"
              android:background="@color/windowsBackground"
              android:orientation="vertical"
              android:paddingBottom="@dimen/dp_8"
              android:paddingTop="@dimen/dp_8">


    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/chatting_right_file_msg_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp"
            android:gravity="center"
            android:textColor="@color/textGray"
            android:textSize="14sp"
            android:visibility="gone"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="10dp">

        <CheckBox
            android:id="@+id/chatting_right_file_checkbox_del"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="5dp"
            android:button="@drawable/background_image_select_left_check_box"
            android:checked="false"
            android:paddingTop="30dp"
            android:visibility="gone"/>

        <ImageView
            android:id="@+id/chatting_right_file_user_head"
            android:layout_width="@dimen/dp_48"
            android:layout_height="@dimen/dp_48"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/frame_background_head_icon"
            android:focusable="false"
        />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_toLeftOf="@id/chatting_right_file_user_head"
            android:gravity="right|center">

            <ProgressBar
                android:id="@+id/chatting_right_file_msg_sending_progressbar"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:indeterminateBehavior="repeat"
                android:indeterminateDrawable="@drawable/progressbar"
                android:indeterminateOnly="true"
                android:padding="5dp"
                android:visibility="gone"></ProgressBar>

            <ImageButton
                android:id="@+id/chatting_right_file_msg_send_state"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@null"
                android:padding="5dp"
                android:src="@drawable/chat_msg_send_fail_selector"
                android:visibility="gone"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingBottom="10dp"
                android:paddingLeft="13dp"
                android:paddingRight="8dp"
                android:paddingTop="10dp">

                <TextView
                    android:id="@+id/chatting_right_file_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/textGray"
                    android:textSize="14sp"
                    android:visibility="visible"/>


                <TextView
                    android:id="@+id/chatting_right_file_size"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:textColor="@color/textGray"
                    android:textSize="14sp"
                    android:visibility="gone"/>

            </LinearLayout>
        </LinearLayout>

    </RelativeLayout>


</LinearLayout>